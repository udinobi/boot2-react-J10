{
  "cliOptions": {
    "exclude": [
      "bin",
      "build",
      "coverage",
      "node_modules"
    ]
  },
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "jsRules": {
    "no-console": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "interface-name": [true, "never-prefix"],
    "no-console": false,
    "no-empty-interface": false
  }
}
